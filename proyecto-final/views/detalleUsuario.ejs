<body>
    <!-- div para la alerta de error -->
    <div class="error"> 
    
    </div>
    
    <header class="mainHeader">
      <div class="dosPalabras">  
      <a class="head" href= "/../veoVeo/home"><label for="">Inicio</label></a>
        <a class="resenias" href= "../login">MyReviews</a>
        </div>
      <h1>Veo<a href="/../veoVeo/home"><img src="/images/logo.png" alt=""></a>Veo</h1>
        <form class="form-buscador" action="../veoVeo/resultado" method="get" id="busqueda">
          <input class="buscadorsecundario inputHidden" type="text" name="buscadorsecundario" placeholder="Buscador" value="">
          <button type="submit">Enviar</button>
          <i class="fas fa-search" id="lupita"></i>
          <a href="../veoVeo/favoritas" ><i class="fas fa-heart"></i></a>
          <a href="#offcanvas-derecho" uk-toggle><i class="fas fa-filter"></i></a>
          <a href="../buscar" uk-toggle><i class="fas fa-users"></i></a>
        </form>    
      </header>

<main>
  <div class="todo">
      <h1 class="detalle">Detalle</h1>
        
      <ul class="uk-list"  id="detail">
            <li> Nombre: <%= detail.name %></li>
            <li>Fecha de nacimiento: <%= detail.birthday %></li>
            <li>Email: <%= detail.email %></li>
      </ul>

    <div>
        <h2 id="h2" style="color: white;">Rese√±as de <%= detail.name %>:  </h2>

        <div uk-slider="center: true">
        <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1">
          <ul class="uk-slider-items uk-child-width-1-3 uk-grid" id="comentario">
        <% for(let i = 0; i < detail.User_Reviews.length; i++) { %>
            <li class="comentario" style="border-left: 1px solid white"> 
                <div class="uk-card-body">
                    <p> Puntaje: <%=detail.User_Reviews[i].rating%> </p>
                    <p><%=detail.User_Reviews[i].text%></p>
                </div>
            </li> 
          <% } %> 
         </ul>
          <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
          <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slider-item="next"></a>
        </div>
        <ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin"></ul>
      </div>
    </div>
  </div>
</main> 

    <%- include('../partials/footer') %>
</body>
